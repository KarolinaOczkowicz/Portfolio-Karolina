//- Thumbnail
//- Original image naming format: pagename-{X}-1200x600_original.jpg
mixin img-thumbnail(obj)
  a(href='images/' + obj.original + '.jpg', class='img-thumbnail-variant-' + obj.number, data-lightgallery='item')
    figure
      +jpg(obj.img, obj.imgClass)
    .caption
      span.icon.icon-lg.linear-icon-magnifier
      
       
//- list inline
mixin list-inline-icon(obj)
  ul(class=obj.list_class)
    each item in obj.items
      li: a(href='#' class=item).icon

mixin swiper( data )
  .swiper-container.swiper-slider(
  data-effect= data.effect,
  data-loop= data.loop,
  data-direction= data.direction,
  data-autoplay= data.autoplay,
  data-speed= data.speed,
  data-mousewheel= data.mousewheel,
  data-keyboard= data.keyboard
  )&attributes( attributes )
    .swiper-wrapper
      if( block )
        block

    if ( data.pagination )
      .swiper-pagination

    if ( data.navigation )
      .swiper-button-prev.linear-icon-chevron-left
      .swiper-button-next.linear-icon-chevron-right

    if ( data.scrollbar )
      .swiper-scrollbar
