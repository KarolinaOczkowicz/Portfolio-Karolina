extends  ../_skeleton

//- Includes
include ../elements/_ui-tag-list
include ../elements/_ui-list-inline-icon
include ../elements/_ui-slider-blog
include ../elements/_ui-pagination-classic

block variables
	- var activeIndex = 6
	- var pageName = 'Grid Blog'

block page
	// Page header
	include ../sections/_header-default

	// Parallax header
	include ../elements/_ui-parallax
	section
		+parallax({
			"attrType": "media",
			"src": "images/parallax-4.jpg",
			"htmlSpeed": "0.1",
			"class": ['parallax-header']
		})
			.parallax-header__inner.context-dark: .parallax-header__content
				.container
					.row.justify-content-sm-center
						.col-md-10.col-xl-8
							h2.heading-decorated=pageName

	section.bg-default.section-md
		.container
			.row: .col-sm-12.text-center: h4.heading-decorated Blog 
			.row.row-60
				.col-md-6.col-xl-4
					// Post classic
					article.post-classic.post-minimal
						+jpg('blog-image-1-886x668')

						.post-classic-title.post-classic-title-icon.linear-icon-star
							h6: a(href=postImage) 10 Reasons to Buy theFuture.

						.post-meta
							.group
								a(href=postImage): time(datetime='2018') Jan.20, 2018
								a(href=postImage).meta-author by Brian Williamson

				.col-md-6.col-xl-4
					// Post slider
					article.post-slider.post-minimal

						+slider-blog({
							class: 'carousel-slider-blog-post',
							items: [
								{
									original_img: 'portfolio-single-1-1200x800',
									img_thumb: 'portfolio-single-1-1200x800'
								},
								{
									original_img: 'portfolio-single-2-1200x800',
									img_thumb: 'portfolio-single-2-1200x800'
								},
								{
									original_img: 'portfolio-single-3-1200x800',
									img_thumb: 'portfolio-single-3-1200x800'
								}
							]
						})

						.post-classic-title
							h6: a(href=postSlider) Getting to another  level of design and functionality.

						.post-meta
							.group
								a(href=postSlider): time(datetime='2018') Jan.20, 2018
								a(href=postSlider).meta-author by Brian Williamson
								
				.col-md-6.col-xl-4
					// Post classic
					article.post-minimal
						+jpg('home-post-2-418x315')
						.post-classic-title
							h6: a(href=postImage) Clean Style. Cons and Pros.

						.post-meta
							.group-xs
								a(href=postImage): time(datetime='2018') Jan.20, 2018
								a(href=postImage).meta-author by Brian Williamson
								a(href=postImage) 3 comment(s)
								+tag-list({
									list_class: 'list-inline-tag',
									href: postImage,
									items: [
										"Industry News"]
								})
							
				.col-md-6.col-xl-4
					// Post video 
					article.post-slider.post-minimal

						.entry-video.embed-responsive.embed-responsive-16by9
							iframe(width='886', height='668', src=videoSrc, allowfullscreen='')

						.post-classic-title
							h6: a(href=postVideo) Creating Portfolio.

						.post-meta
							.group
								a(href=postVideo): time(datetime='2018') Jan.20, 2018
								a(href=postVideo).meta-author by Brian Williamson

						.post-classic-body
							p We recommend focusing on 4 most essential characteristics, each vital for your company’s to have an efficient and long-standing online presence!

						.post-minimal-footer
							+list-inline-icon({
								list_class: 'list-inline-sm',
								items: [
									"icon-xxs fa-facebook",
									'icon-xxs fa-twitter',
									'icon-xxs fa-google-plus',
									'icon-xxs fa-vimeo',
									'icon-xxs fa-youtube',
									'icon-xxs fa-pinterest-p']
							})

							a(href=postVideo).button.button-link View now!

				.col-md-6.col-xl-4
					// Post Link
					article.post-link
						.post-classic-title
							h6: a(href=blogPostLink) Choosing a template for your new website
						a(href=blogPostLink) http://zemez.io
						
				.col-md-6.col-xl-4
					// Post audio
					article.post-audio.post-minimal

						include ../includes/_rd-audio-track

						.post-classic-title
							h6: a(href=postAudio) Installing Your First HTML Template

						.post-classic-body
							p Each business niche may require a unique functionality of its own. With that notion in mind, our team of professional HTML coders has been working day and night to roll out a definitive collection of built-in HTML plugins, that come with each of our HTML templates…

						.post-minimal-footer
							.post-meta
								.group
									a(href=postAudio): time(datetime='2018') Jan.20, 2018
									a(href=postAudio).meta-author by Brian Williamson
									
				.col-md-6.col-xl-4
					// Post quote
					article.post-quote.post-minimal
						a(href=postQuote)
							// Quote centered
							.quote-centered
								+quote-mark('quote-centered__mark')

								.quote-centered__text
									p.heading-6 Installing Your First HTML Template

								p.quote-centered__cite Adam Smith

				.col-md-6.col-xl-4
					// Post standard
					article.post-classic.post-minimal
						.post-classic-title
							h6: a(href=postLink) How to Use Bootstrap Framework

						.post-meta
							.group
								a(href=postLink): time(datetime='2018') Jan.20, 2018
								a(href=postLink).meta-author by Brian Williamson

						.post-classic-body
							p All the HTML templates that we have here have had a vast team of professional designers sketching, working and executing the ultimate visual look for it. With such a wide range of choices at hand, we strongly advise you to stick to the...

				

	+divider
	section.section-sm.text-center
		.container
			+pagination-classic(1,
			[{"href": "#"}, {"href": "#"}, {"href": "#"}, {"href": "#"}],
			null,
			{"title": "", "href": "#"}
			)


	// Page Footer
	include ../sections/_footer-corporate
