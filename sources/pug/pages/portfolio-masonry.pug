extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs
include ../elements/_ui-pagination-classic
include ../elements/_ui-portfolio-item
include ../elements/_ui-parallax

block variables
	- var activeIndex = 4
	- var pageName = 'Portfolio'

block page
	// Page header
	include ../sections/_header-default

	// Parallax header
	+parallax({
		"src": "images/parallax-4.jpg",
		"class": ['parallax-header']
	})
		.parallax-header__inner.context-dark: .parallax-header__content
			.container
				.row.justify-content-sm-center
					.col-md-10.col-xl-8
						h2.heading-decorated Our Portfolio
						h6 Masonry layout


	section.section-lg.bg-default.text-center
		.bg-decor.d-flex.align-items-center( data-parallax-scroll='{"y": 50,  "smoothness": 30}' )
			+png('bg-decor-6')
		.container
			h4.heading-decorated Portfolio
			.isotope-wrap.row.row-70
				.col-sm-12
					ul.list-nav.isotope-filters.isotope-filters-horizontal
						li: a.active(data-isotope-filter='*', data-isotope-group='gallery' href='#') All
						li: a(data-isotope-filter='Category 1', data-isotope-group='gallery' href='#') Objects
						li: a(data-isotope-filter='Category 2', data-isotope-group='gallery' href='#') People

					.isotope.row.portfolio-masonry-container(data-isotope-layout='masonry', data-isotope-group='gallery')
						.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 1')
							+portfolio-item({
								album: true,
								href: 'single-portfolio.html',
								img: 'portfolio-masonry-1-430x430',
								label_text: 'Link',
								icon_class1: 'linear-icon-folder-picture',
								items: ['9 photos', 'Objects'],
								title: 'Portfolio Album',
								desc: 'Creating Portfolio.',
								icon_class2: 'linear-icon-arrow-right'
							})

						.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 1')
							+portfolio-item({
								single_img: true,
								number: 3,
								original: 'portfolio-original-5-1920x1280',
								img: 'portfolio-masonry-2-430x700',
								icon_class1: 'linear-icon-picture',
								items: ['Objects'],
								title: 'Photo',
								desc: 'Creating Portfolio.',
								icon_class2: 'linear-icon-plus'
							})

						.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 1')
							+portfolio-item({
								album: true,
								href: 'single-portfolio.html',
								img: 'portfolio-masonry-3-430x550',
								label_text: 'Link',
								icon_class1: 'linear-icon-folder-picture',
								items: ['9 photos', 'Objects'],
								title: 'Portfolio Album',
								desc: 'Creating Portfolio.',
								icon_class2: 'linear-icon-arrow-right'
							})

						.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 1')
							+portfolio-item({
								single_img: true,
								number: 3,
								original: 'portfolio-original-7-1280x1920',
								img: 'portfolio-masonry-4-430x550',
								icon_class1: 'linear-icon-picture',
								items: ['Objects'],
								title: 'Photo',
								desc: 'Creating Portfolio.',
								icon_class2: 'linear-icon-plus'
							})

						.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 2')
							+portfolio-item({
								album: true,
								href: 'single-portfolio.html',
								img: 'portfolio-masonry-5-430x500',
								label_text: 'Link',
								icon_class1: 'linear-icon-folder-picture',
								items: ['9 photos', 'Objects'],
								title: 'Portfolio Album',
								desc: 'Creating Portfolio.',
								icon_class2: 'linear-icon-arrow-right'
							})

						.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 2')
							+portfolio-item({
								single_img: true,
								number: 3,
								original: 'portfolio-original-9-1920x1282',
								img: 'portfolio-masonry-6-430x600',
								icon_class1: 'linear-icon-picture',
								items: ['Objects'],
								title: 'Photo',
								desc: 'Creating Portfolio.',
								icon_class2: 'linear-icon-plus'
							})
							

				.col-sm-12
					+pagination-classic(1,
					[{"href": "#"}, {"href": "#"}, {"href": "#"}, {"href": "#"}],
					null,
					{"title": "", "href": "#"}
					)

	// Page Footer
	include ../sections/_footer-corporate

