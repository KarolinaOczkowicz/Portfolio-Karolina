extends  ../_skeleton

//- Includes
include ../elements/_ui-list-inline-icon
include ../elements/_ui-progress-bar-linear
include ../elements/_ui-post-project
include ../elements/_ui-pricing-table
include ../elements/_ui-parallax
include ../elements/_ui-thumbnail-classic-minimal

block variables
	- var activeIndex = 0
	- var pageName = 'Home'

block page
	include ../sections/_header-modern
	include ../sections/_section-slider-modern

	// Our Services
	section.section-md.bg-default.text-center#features
		.container
			h4.heading-decorated WELCOME
			.row.row-50.justify-content-md-center.justify-content-lg-start
				.col-md-6.col-lg-4
					// Blurb circle
					article.blurb.blurb-minimal: .unit.flex-row.unit-spacing-md
						.unit-left
							.blurb-minimal__icon: span.icon.linear-icon-feather
						.unit-body
							p.blurb__title: a(href='services.html').heading-6 Qualified team
							p theFuture is crafted by top industry leaders with love, care and customer needs in mind. 

				.col-md-6.col-lg-4
					// Blurb circle
					article.blurb.blurb-minimal: .unit.flex-row.unit-spacing-md
						.unit-left
							.blurb-minimal__icon: span.icon.linear-icon-magic-wand
						.unit-body
							p.blurb__title: a(href='services.html').heading-6 Pixel Perfect Typography
							p Itâ€™s impossible to ignore the fact that perfect typography is a key asset of design success.

				.col-md-6.col-lg-4
					// Blurb circle
					article.blurb.blurb-minimal: .unit.flex-row.unit-spacing-md
						.unit-left
							.blurb-minimal__icon: span.icon.linear-icon-bag2
						.unit-body
							p.blurb__title: a(href='services.html').heading-6 Advanced UI Toolkit
							p theFuture comes with a powerful and flexible extended toolkit in addition to basic Bootstrap.
	='\n'

	// About us
	section.bg-gray-lighter.section-lg.decor-text(data-content='About')
		.bg-decor.d-flex.align-items-center.justify-content-end( data-parallax-scroll='{"x": -100, "y": -30, "smoothness": 30}' )
			+png('bg-decor-9')
		.container
			.row.justify-content-md-center.justify-content-lg-between.row-50.align-items-center
				.col-lg-6
					h4.heading-decorated About us
					p We are a team of professional, energetic individuals with talented designers and experienced managers available to guide our clients through the flawless and timely execution of any web design project. Since day one, we have been delivering creative and unique websites to our clients worldwide.
					.row.row-30
						.col-md-6
							// Blurb minimal
							article.blurb
								.blurb-minimal__icon: span.icon.linear-icon-rocket
								p.blurb__title Built For Speed
								p Our template was built for speed. Get the best results at GTmetrix and Google PageSpeed.

								ul.list-marked-primary
									li Amazing Performance
									li Improved Stability
									li Optimized Page Load Time

								a(href='single-service.html').button.button-gray-light-outline read more

						.col-md-6
							// Blurb minimal
							article.blurb
								.blurb-minimal__icon: span.icon.linear-icon-equalizer
								p.blurb__title Flexible and Multipurpose
								p theFuture allows creating various websites for complex and scalable projects.

								ul.list-marked-primary
									li Lots of Predesigned Pages
									li Extended Bootstrap Framework
									li Clean Interface

								a(href='single-service.html').button.button-gray-light-outline read more
								
				.col-md-7.col-lg-4
					figure.image-sizing-1 
						+jpg('home-variant-5-1-391x642')

	include ../sections/_section-circle-counters-dark
		
	section.section.section-md.bg-default.text-center
		.bg-decor.d-flex.align-items-start( data-parallax-scroll='{"x": 80, "y": -80,  "smoothness": 30}' )
			+png('bg-decor-3')
		.bg-decor.d-flex.align-items-end( data-parallax-scroll='{"x": 120, "smoothness": 60}' )
			+png('bg-decor-1')
		.container
			h4.heading-decorated Services
			.row.row-50
				.col-md-6
					+thumbnail-classic-minimal({
						img: 'service-1-652x491',
						title: 'Bootstrap Framework',
						link: 'single-service.html',
						text: 'theFuture is based on Bootstrap Framework, which makes it a nice template for any purpose. '
					})
				.col-md-6
					+thumbnail-classic-minimal({
						img: 'service-2-652x491',
						title: 'Novi Builder',
						link: 'single-service.html',
						text: 'Use our Novi Builder to customize and update your website within seconds.'
					})
				.col-md-6
					+thumbnail-classic-minimal({
						img: 'service-3-652x491',
						title: 'Responsive & Retina Ready',
						link: 'single-service.html',
						text: 'theFuture looks great on any screen resolution and on any device due to its responsiveness.'
					})
				.col-md-6
					+thumbnail-classic-minimal({
						img: 'service-4-652x491',
						title: 'SEO FRIENDLY',
						link: 'single-service.html',
						text: 'theFuture has the valid code and performance optimized framework that make SEO easy and hassle free.'
					})
					

	include ../sections/_section-cta-3

	include ../sections/_section-portfolio
		
	include ../sections/_section-contact
		
	include ../sections/_section-testimonials-2
		
		
	// Page Footer 
	include ../sections/_footer-corporate
		
block modals
	include ../includes/_modal-login
	include ../includes/_modal-register
