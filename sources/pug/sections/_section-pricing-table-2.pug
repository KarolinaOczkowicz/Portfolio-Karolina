include ../elements/_ui-pricing-table
	
section.section-xl.decor-text(data-content='Pricing')
	.container
		.row.row-50
			.col-md-6.col-xl-3
				+pricing-table({
					title: 'Starter',
					price: '$14.89'
				})
					ul.list
						li
							span 10GB Storage amount
						li 3 Users
						li 30GB Bandwidth
						li 20 MySQL Databases

			.col-md-6.col-xl-3
				+pricing-table({
					class: 'pricing-table-label',
					label: 'most popular',
					title: 'Standard',
					price: '$32.89'
				})
					ul.list
						li
							span 20GB Storage amount
						li 5 Users
						li 30GB Bandwidth
						li 30 MySQL Databases

			.col-md-6.col-xl-3
				+pricing-table({
					title: 'Business',
					price: '$76.89 '
				})
					ul.list
						li
							span 30GB Storage amount
						li 10 Users
						li 50GB Bandwidth
						li 40 MySQL Databases

			.col-md-6.col-xl-3
				+pricing-table({
					title: 'Professional',
					price: '$89.89'
				})
					ul.list
						li
							span 40GB Storage amount
						li Unlimited users
						li 60GB Bandwidth
						li 50 MySQL Databases
