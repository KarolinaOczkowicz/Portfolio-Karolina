include ../elements/_ui-portfolio-item

section.section-lg.bg-default.text-center.decor-text(data-content='Gallery')
	.bg-decor.d-flex.align-items-center( data-parallax-scroll='{"y": 100,  "smoothness": 150}' )
		+png('bg-decor-7')
	.container
		h4.heading-decorated Portfolio
		.isotope-wrap.row.row-70
			.col-sm-12
				ul.list-nav.isotope-filters.isotope-filters-horizontal
					li: a.active(data-isotope-filter='*', data-isotope-group='gallery' href='#') All
					li: a(data-isotope-filter='Category 1', data-isotope-group='gallery' href='#') Objects
					li: a(data-isotope-filter='Category 2', data-isotope-group='gallery' href='#') People

				.isotope.row.portfolio-justify-container(data-isotope-layout='fitRows', data-isotope-group='gallery')
					.col-12.col-md-6.col-lg-4.isotope-item(data-filter='Category 1')
						+portfolio-item({
							album: true,
							href: 'single-portfolio.html',
							img: 'portfolio-justify-1-430x750',
							label_text: 'Link',
							icon_class1: 'linear-icon-folder-picture',
							items: ['9 photos', 'Objects'],
							title: 'Portfolio Album',
							desc: 'Creating Portfolio.',
							icon_class2: 'linear-icon-arrow-right'
						})

					.col-12.col-md-6.col-lg-8.isotope-item(data-filter='Category 1')
						+portfolio-item({
							single_img: true,
							number: 3,
							original: 'slider-slide-14-1280x1920',
							img: 'portfolio-justify-2-910x750',
							icon_class1: 'linear-icon-picture',
							items: ['Objects'],
							title: 'Photo',
							desc: 'Creating Portfolio.',
							icon_class2: 'linear-icon-plus'
						})

