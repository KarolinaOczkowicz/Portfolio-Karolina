include ../elements/_ui-pricing-table
	
section.section-lg.bg-gray-lighter.text-center
	.bg-decor( data-parallax-scroll='{"x": 80, "y": -80,  "smoothness": 30}' )
		+png('bg-decor-3')
	.bg-decor.d-flex.align-items-center( data-parallax-scroll='{"x": 80,  "smoothness": 30}' )
		+png('bg-decor-1')
	
	.container
		h4.heading-decorated PRICING CHART
		.row.row-50.justify-content-lg-center
			.col-md-6.col-lg-4.col-xl-3
				.pricing-table-wrap
					.pricing-table-custom
						h5 Available options
						ul.list-xxs.small
							li Amount of space
							li Supported users
							li Automatic installation
							li Number of databases

			.col-md-6.col-lg-4.col-xl-3
				+pricing-table({
					class: 'pricing-table-label',
					label: 'most popular',
					title: 'Standard',
					price: '$32.89'
				})
					ul.list
						li
							span 10GB Storage amount
						li 2 Users
						li: span.icon.icon-secondary-2.linear-icon-cross2
						li 20 MySQL Databases

			.col-md-6.col-lg-4.col-xl-3
				+pricing-table({
					title: 'Business',
					price: '$76.89 '
				})
					ul.list
						li
							span 10GB Storage amount
						li 5 Users
						li: span.icon.icon-primary.linear-icon-check
						li 35 MySQL Databases

			.col-md-6.col-lg-4.col-xl-3
				+pricing-table({
					title: 'Professional',
					price: '$89.89'
				})
					ul.list
						li
							span 10GB Storage amount
						li Unlimited users
						li: span.icon.icon-primary.linear-icon-check
						li 50 MySQL Databases
		
